<div class="container">
  <h1>All tasks</h1>
      <% @tasks.each do |task| %>
<div class="row d-flex flex-row">

        <% if task.completed %>
          <i class="far fa-check-circle"></i>
        <% else %>
          <i class="far fa-circle"></i>
        <% end %>
        <%= link_to task.title, task_path(task) %>
        <%= link_to raw('<i class="fa fa-trash"></i>'), task_path(task),
          method: :delete,
          data: { confirm: "Are you sure?" } %>

</div>
      <% end %>
<div class="row">


      <%= link_to raw('<i class="fas fa-plus"></i> Create a new task'), tasks_new_path %>
</div>
</div>


